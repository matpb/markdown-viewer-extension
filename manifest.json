{
  "manifest_version": 3,
  "name": "Markdown Viewer",
  "version": "1.0.0",
  "description": "View markdown files as beautifully rendered HTML with GitHub Flavored Markdown support",
  "permissions": [],
  "host_permissions": [],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["file://*/*.md", "file://*/*.markdown"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "viewer.html",
        "viewer.js",
        "styles/*.css",
        "lib/*.js",
        "lib/*.css"
      ],
      "matches": ["file://*/*"]
    }
  ]
}
