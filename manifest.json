{
  "manifest_version": 3,
  "name": "Markdown Viewer",
  "version": "1.2.0",
  "description": "View markdown files as beautifully rendered HTML with GitHub Flavored Markdown support",
  "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Render selected text as Markdown"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["file://*/*.md", "file://*/*.markdown"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "viewer.html",
        "viewer.js",
        "styles/*.css",
        "lib/*.js",
        "lib/*.css"
      ],
      "matches": ["file://*/*"]
    }
  ]
}
